<main class="container mt-5">
    <div class="row">
        <div class="login-card mx-auto" style="max-width: 18rem; max-height:450px;">
            <div class="trivia-card-header">
                <h2>Log in</h2>
            </div>
            <form class="form">
                <div class="form-group">
                    <label for="username-login">Username:</label>
                    <input class="form-input" type="text" id="username-login" />
                </div>
                <div class="form-group">
                    <label for="password-login">Password:</label>
                    <input class="form-input" type="password" id="password-login" />
                </div>
                <div class="form-group text-center">
                    <button class="login-form answer-btn" type="submit" id="login-btn">Log in</button>
                </div>
            </form>

            <script src="./js/login.js"></script>
        </div>
    </div>
</main>