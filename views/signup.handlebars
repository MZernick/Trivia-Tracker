<main class="container mt-5">
    <div class="row">
        <div class="home-card mx-auto" style="max-width: 18rem; max-height:450px;">
            <div class="trivia-card-header">
                <h2>Sign up to play!</h2>
            </div>
            <form class="form signup-form">
                <div class="form-group">
                    <label for="username-signup">Username:</label>
                    <input class="form-input" type="text" id="username-signup" />
                </div>
                <div class="form-group">
                    <label for="password-signup">Password:</label>
                    <input class="form-input" type="password" id="password-signup" />
                </div>
                <div class="form-group text-center">
                    <button class="answer-btn" type="submit" id="signup-btn">Sign up</button>
                </div>
            </form>

            <script src="./js/signup.js"></script>
        </div>
    </div>
</main>